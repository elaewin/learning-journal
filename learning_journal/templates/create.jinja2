{% extends "templates/layout.jinja2" %}
{% block body %}
<form action="{{ action }}" method="POST">
{% for field in form %}
  {% if field.errors %}
    <ul>
    {% for error in field.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
    <p>{{ field.label(class_="form-label") }}: {{ field(class_="form-field-text") }}</p>
{% endfor %}
    <p class="submit-button"><input class="btn" type="submit" name="submit" value="Submit" /></p>
</form>
{% endblock %}

