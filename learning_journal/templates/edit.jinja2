{% extends "templates/layout.jinja2" %}
{% block body %}
<form action="{{ request.route_url('action', action='edit') }}" method="POST">
{% for field in form %}
  {% if field.errors %}
    <ul>
    {% for error in field.errors %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
  {% endif %}
    <p>{{ field.label(class_="form-label") }}: {{ field(class_="form-field-text") }}</p>
{% endfor %}
    <p><input type="submit" name="submit" value="Submit" /></p>
</form>
{% endblock %}

